#program "Checking a number for parity";

#include(console.h);
#include(sysword.h);

_start {
    $num : 10int8 = 0;

    console(stdout("Enter a number: "), stdin($num));

    if($num % 2 == 0) -> console(stdout("%i8 even number", $num));
    else -> console(stdout("%i8 odd number", $num));
    
    syscall::exit;
    return; // for Windows
}

